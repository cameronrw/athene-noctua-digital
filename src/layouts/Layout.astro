---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Athene noctua digital" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--color-citron: #BBBE64;
		--color-beige: #EAF0CE;
		--color-silver: #C0C5C1;
		--color-slate-grey: #7D8491;
		--color-english-violet: #443850;
	}
	html {
		background-color: var(--color-english-violet);
		color: var(--color-beige);
		font-family: system-ui, sans-serif;
	}
</style>
